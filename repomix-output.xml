}

/**
 * LocalStorage ì‚¬ìš© ê°€ëŠ¥ ì—¬ë¶€ í™•ì¸
 *
 * ì¼ë¶€ ë¸Œë¼ìš°ì €ëŠ” í”„ë¼ì´ë¹— ëª¨ë“œì—ì„œ LocalStorageë¥¼ ë¹„í™œì„±í™”í•©ë‹ˆë‹¤.
 */
export function isLocalStorageAvailable(): boolean {
  if (isServer()) {
    return false;
  }

  try {
    const testKey = '__localStorage_test__';
    window.localStorage.setItem(testKey, 'test');
    window.localStorage.removeItem(testKey);
    return true;
  } catch {
    return false;
  }
}

/**
 * Hydration safe ì»´í¬ë„ŒíŠ¸ ë˜í¼
 *
 * ì»´í¬ë„ŒíŠ¸ê°€ í´ë¼ì´ì–¸íŠ¸ì—ì„œë§Œ ë Œë”ë§ë˜ë„ë¡ ë³´ì¥í•©ë‹ˆë‹¤.
 *
 * @example
 * ```tsx
 * import { ClientOnly } from '@/lib/utils/hydration';
 *
 * function MyComponent() {
 *   return (
 *     <ClientOnly fallback={<div>Loading...</div>}>
 *       <div>{localStorage.getItem('key')}</div>
 *     </ClientOnly>
 *   );
 * }
 * ```
 */
export function ClientOnly({
  children,
  fallback = null,
}: {
  children: React.ReactNode;
  fallback?: React.ReactNode;
}): React.ReactNode {
  const [mounted, setMounted] = React.useState(false);

  React.useEffect(() => {
    setMounted(true);
  }, []);

  if (!mounted) {
    return fallback;
  }

  return children;
}
