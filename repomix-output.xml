'use client';

import { useState, useEffect, useCallback } from 'react';
import { Todo, CreateTodoInput, UpdateTodoInput } from '@/types/todo';
import { importDataSchema } from '@/lib/schemas/todoSchema';

const STORAGE_KEY = 'premium-todos';

/**
 * LocalStorageì—ì„œ Todo ëª©ë¡ ë¶ˆëŸ¬ì˜¤ê¸°
 */
function loadTodosFromStorage(): Todo[] {
  if (typeof window === 'undefined') {
    return [];
  }

  try {
    const stored = localStorage.getItem(STORAGE_KEY);
    if (!stored) {
      return [];
    }

    const parsed = JSON.parse(stored);
    // Date ê°ì²´ë¡œ ë³€í™˜
    return parsed.map((todo: any) => ({
      ...todo,
      createdAt: new Date(todo.createdAt),
    }));
  } catch (error) {
    console.error('Failed to load todos from localStorage:', error);
    return [];
  }
}

/**
 * LocalStorageì— Todo ëª©ë¡ ì €ì¥
 */
function saveTodosToStorage(todos: Todo[]): void {
  if (typeof window === 'undefined') {
    return;
  }

  try {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(todos));
  } catch (error) {
    console.error('Failed to save todos to localStorage:', error);
  }
}

/**
 * í•  ì¼ ê´€ë¦¬ ì»¤ìŠ¤í…€ í›…
 */
export function useTodos() {
  const [todos, setTodos] = useState<Todo[]>([]);
  const [isLoaded, setIsLoaded] = useState(false);

  // ì´ˆê¸° ë¡œë”©
  useEffect(() => {
    const loadedTodos = loadTodosFromStorage();
    setTodos(loadedTodos);
    setIsLoaded(true);
  }, []);

  // ìƒíƒœ ë³€ê²½ ì‹œ LocalStorageì— ì €ì¥
  useEffect(() => {
    if (isLoaded) {
      saveTodosToStorage(todos);
    }
  }, [todos, isLoaded]);

  /**
   * ìƒˆë¡œìš´ í•  ì¼ ì¶”ê°€
   */
  const addTodo = useCallback((input: CreateTodoInput) => {
    const newTodo: Todo = {
      id: crypto.randomUUID(),
      ...input,
      createdAt: new Date(),
    };

    setTodos((prev) => [newTodo, ...prev]);
    return newTodo;
  }, []);

  /**
   * í•  ì¼ ì‚­ì œ
   */
  const deleteTodo = useCallback((id: string) => {
    setTodos((prev) => prev.filter((todo) => todo.id !== id));
  }, []);

  /**
   * í•  ì¼ ìˆ˜ì •
   */
  const updateTodo = useCallback((id: string, updates: UpdateTodoInput) => {
    setTodos((prev) =>
      prev.map((todo) =>
        todo.id === id
          ? { ...todo, ...updates }
          : todo
      )
    );
  }, []);

  /**
   * ì™„ë£Œ ìƒíƒœ í† ê¸€
   */
  const toggleTodo = useCallback((id: string) => {
    setTodos((prev) =>
      prev.map((todo) =>
        todo.id === id
          ? { ...todo, completed: !todo.completed }
          : todo
      )
    );
  }, []);

  /**
   * íŠ¹ì • í•  ì¼ ì°¾ê¸°
   */
  const getTodoById = useCallback(
    (id: string): Todo | undefined => {
      return todos.find((todo) => todo.id === id);
    },
    [todos]
  );

  /**
   * ëª¨ë“  í•  ì¼ ì‚­ì œ
   */
  const clearAllTodos = useCallback(() => {
    setTodos([]);
  }, []);

  /**
   * ì™„ë£Œëœ í•  ì¼ë§Œ ì‚­ì œ
   */
  const clearCompletedTodos = useCallback(() => {
    setTodos((prev) => prev.filter((todo) => !todo.completed));
  }, []);

  /**
   * í•  ì¼ ëª©ë¡ì„ JSON íŒŒì¼ë¡œ ë‚´ë³´ë‚´ê¸°
   */
  const exportTodos = useCallback(() => {
    const exportData = {
      version: '1.0',
      exportedAt: new Date().toISOString(),
      todos: todos,
    };

    const dataStr = JSON.stringify(exportData, null, 2);
    const blob = new Blob([dataStr], { type: 'application/json' });
    const url = URL.createObjectURL(blob);

    const link = document.createElement('a');
    link.href = url;
    link.download = `todos-backup-${new Date().toISOString().split('T')[0]}.json`;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    URL.revokeObjectURL(url);
  }, [todos]);

  /**
   * JSON íŒŒì¼ì—ì„œ í•  ì¼ ëª©ë¡ ê°€ì ¸ì˜¤ê¸°
   */
  const importTodos = useCallback((file: File): Promise<void> => {
    return new Promise((resolve, reject) => {
      const reader = new FileReader();

      reader.onload = (e) => {
        try {
          const content = e.target?.result as string;
          const parsed = JSON.parse(content);

          // Zodë¡œ ë°ì´í„° ìœ íš¨ì„± ê²€ì¦
          const validationResult = importDataSchema.safeParse(parsed);

          if (!validationResult.success) {
            throw new Error('Invalid data format. Please check the file structure.');
          }

          // Date ê°ì²´ë¡œ ë³€í™˜
          const importedTodos: Todo[] = validationResult.data.todos.map((todo) => ({
            ...todo,
            createdAt: new Date(todo.createdAt),
          }));

          setTodos(importedTodos);
          resolve();
        } catch (error) {
          if (error instanceof Error) {
            reject(error);
          } else {
            reject(new Error('Failed to import todos. Please check the file format.'));
          }
        }
      };

      reader.onerror = () => {
        reject(new Error('Failed to read file'));
      };

      reader.readAsText(file);
    });
  }, []);

  // í†µê³„ ê³„ì‚°
  const stats = {
    total: todos.length,
    completed: todos.filter((todo) => todo.completed).length,
    incomplete: todos.filter((todo) => !todo.completed).length,
    byPriority: {
      high: todos.filter((todo) => todo.priority === 'high').length,
      medium: todos.filter((todo) => todo.priority === 'medium').length,
      low: todos.filter((todo) => todo.priority === 'low').length,
    },
  };

  return {
    todos,
    isLoaded,
    addTodo,
    deleteTodo,
    updateTodo,
    toggleTodo,
    getTodoById,
    clearAllTodos,
    clearCompletedTodos,
    exportTodos,
    importTodos,
    stats,
  };
}

export type UseTodosReturn = ReturnType<typeof useTodos>;
