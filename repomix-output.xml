/**
 * ì•ˆì „í•˜ê²Œ LocalStorageì—ì„œ ê°’ ê°€ì ¸ì˜¤ê¸°
 *
 * @param key - LocalStorage í‚¤
 * @param defaultValue - ê¸°ë³¸ê°’ (ì„ íƒì‚¬í•­)
 * @returns ì €ì¥ëœ ê°’ ë˜ëŠ” ê¸°ë³¸ê°’
 */
export function safeGetLocalStorage<T = string>(
  key: string,
  defaultValue?: T
): T | null {
  if (isServer()) {
    return defaultValue ?? null;
  }

  try {
    const item = window.localStorage.getItem(key);
    return item ? (JSON.parse(item) as T) : (defaultValue ?? null);
  } catch (error) {
    console.error(`Error reading localStorage key "${key}":`, error);
    return defaultValue ?? null;
  }
}

/**
 * ì•ˆì „í•˜ê²Œ LocalStorageì— ê°’ ì €ì¥í•˜ê¸°
 *
 * @param key - LocalStorage í‚¤
 * @param value - ì €ì¥í•  ê°’
 * @returns ì„±ê³µ ì—¬ë¶€
 */
export function safeSetLocalStorage<T>(key: string, value: T): boolean {
  if (isServer()) {
    return false;
  }

  try {
    window.localStorage.setItem(key, JSON.stringify(value));
    return true;
  } catch (error) {
    console.error(`Error setting localStorage key "${key}":`, error);
    return false;
  }
}

/**
 * ì•ˆì „í•˜ê²Œ LocalStorageì—ì„œ ê°’ ì‚­ì œí•˜ê¸°
 *
 * @param key - LocalStorage í‚¤
 * @returns ì„±ê³µ ì—¬ë¶€
 */
export function safeRemoveLocalStorage(key: string): boolean {
  if (isServer()) {
    return false;
  }

  try {
    window.localStorage.removeItem(key);
    return true;
  } catch (error) {
    console.error(`Error removing localStorage key "${key}":`, error);
